<div class="py-4 px-6 m-auto">
  <h2 class="text-2xl font-bold text-center" ><%= @user.name %></h2>
  <% if @user.avatar.attached? %>
    <%= image_tag @user.avatar, class: "rounded-full hover:bg-sky-700 cursor-pointer shadow-lg shadow-cyan-500/50" %>
  <% else %>
    <p>No avatar available</p>
  <% end %>
</div>

<%= render "form" %>