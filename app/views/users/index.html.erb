<div class="grid grid-cols-5 gap-4 mb-4">
  <% @users.each_with_index do |user, index| %>
    <div class="<%= index <= 2 ? 'col-span-2' :  'col-span-1' %> m-auto px-4 py-4 max-w-4xl">
      <h2 class="text-2xl font-bold text-center"><%= user.name %></h2>
      <% if user.avatar.attached? %>
        <%= image_tag user.avatar, class: "rounded-full hover:bg-blue-700 cursor-pointer shadow-lg shadow-cyan-500/50" %>
      <% else %>
        <p>No avatar available</p>
      <% end %>
    </div>
  <% end %>
</div>
