<div>
  <h1 class="text-3xl font-bold mb-4">All Users</h1>

  <% @users.each do |user| %>
    <div>
      <h2><%= user.name %></h2>
      <% if user.avatar.attached? %>
        <%= cl_image_tag user.avatar %>
      <% else %>
        <p>No avatar available</p>
      <% end %>
    </div>
  <% end %>
</div>
